@{
  Layout = "_Layout";
}

@model Library.Models.Patron

<h3>Edit the patron:</h3>
<hr />
<h4>@Html.DisplayFor(model => @Model.Name)</h4>
<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PatronId)
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name, new {@class = "form-control", @required  = "required"})
  </div>
  <input type="submit" value="Edit" class="btn" />
}

<p>@Html.ActionLink("Back to patrons list", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>